<%= render "layouts/nav" %>
<div class="container">
<%= bootstrap_form_for(@event) do |f| %>

        <h1>Request A Tesla</h1>

      <div class="row col-md-4 col-md-offset-2"
        <div class="field col-md-4">
          <%= f.datetime_local_field :start_time, placeholder: "Start Time" %>
        </div>

        <div class="field col-md-4">
          <%= f.datetime_local_field :end_time, placeholder: "End Time" %>
        </div>
      </div>
      
        <div class="field col-md-4 col-md-offset-4">
          <%= f.text_field :location, placeholder: "Street Address" %>
        </div>

        <div class="field col-md-4 col-md-offset-4">
          <%= f.text_field :city, placeholder: "City" %>
        </div>

        <div class="field col-md-4 col-md-offset-4">
          <%= f.text_field :state, placeholder: "State" %>
        </div>

        <div class="field col-md-4 col-md-offset-4">
          <%= f.text_field :zip, placeholder: "Zip" %>
        </div>

        <div class="actions col-md-4 col-md-offset-5">
          <%= f.submit "Request Ride", class: "btn btn-primary" %>
        </div>
      <% end %>
    </section>
</div>

  <div id="map-canvas"></div>
  
  <hr>
  
  <div class="col-sm-8"></div>
  <div class="col-sm-3 pull-right">

